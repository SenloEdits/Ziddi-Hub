local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()

local Window = Library.CreateLib("Ziddi Hub", "DarkTheme")

local Tab = Window:NewTab("Auto Farm")

local Section = Tab:NewSection("Bubble Auto Farm")

-- Auto Blow Toggle
getgenv().AutoBlow = false
Section:NewToggle("Auto Blow Bubble", "Automatically blows bubble", function(state)
    getgenv().AutoBlow = state
end)

-- Auto Sell Toggle
getgenv().AutoSell = false
Section:NewToggle("Auto Sell Bubble", "Automatically sells bubble", function(state)
    getgenv().AutoSell = state
end)

-- Auto Claim Toggle
getgenv().AutoClaim = false
Section:NewToggle("Auto Claim Playtime", "Automatically claims playtime", function(state)
    getgenv().AutoClaim = state
end)

-- Looping both auto functions
spawn(function()
    while true do
        -- Auto Blow Bubble
        if getgenv().AutoBlow then
            local args = {
                [1] = "BlowBubble"
            }
            game:GetService("ReplicatedStorage").Shared.Framework.Network.Remote.Event:FireServer(unpack(args))
        end

        -- Auto Sell Bubble
        if getgenv().AutoSell then
            local args = {
                [1] = "SellBubble"
            }
            game:GetService("ReplicatedStorage").Shared.Framework.Network.Remote.Event:FireServer(unpack(args))
        end

        -- Auto Claim Playtime
        if getgenv().AutoClaim then
            for i = 1, 9 do
                local args = {
                    [1] = "ClaimPlaytime",
                    [2] = i
                }
                game:GetService("ReplicatedStorage"):WaitForChild("Shared"):WaitForChild("Framework"):WaitForChild("Network"):WaitForChild("Remote"):WaitForChild("Function"):InvokeServer(unpack(args))
                wait(0.1)  -- Adjust delay as needed between claims
            end
        end

        -- Main loop delay
        wait(0.1) -- Adjust delay as needed
    end
end) -- End of the spawn function
